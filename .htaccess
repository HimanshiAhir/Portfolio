RewriteEngine On
RewriteCond %{HTTP_HOST} ^himanshiahir\.com [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://himanshiahir.com/$1 [R,L]
<IfModule mod_rewrite.c>
	RewriteCond %{HTTPS} off [OR]
	RewriteCond %{HTTP_HOST} ^www\.himanshiahir\.com [NC]
	RewriteRule (.*) https://himanshiahir.com/$1 [L,R=301]
</IfModule>
RewriteEngine on
RewriteCond $1 !^(index\.php|public|\.txt|\.html)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.html?$1
Header always set Content-Security-Policy "upgrade-insecure-requests;"